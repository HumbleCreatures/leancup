// Prisma schema for Better Auth
// learn more: https://better-auth.com/docs/concepts/database

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

// NOTE: When using mysql or sqlserver, uncomment the //@db.Text annotations in model Account below
// Further reading:
// https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   User   @relation(fields: [createdById], references: [id])
  createdById String

  @@index([name])
  @@map("leancup_post")
}

model User {
  id            String    @id
  name          String //@db.Text
  email         String
  emailVerified Boolean   @default(false)
  image         String? //@db.Text
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  posts         Post[]

  @@unique([email])
  @@map("leancup_user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String? //@db.Text
  userAgent String? //@db.Text
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("leancup_session")
}

model Account {
  id                    String    @id
  accountId             String //@db.Text
  providerId            String //@db.Text
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String? //@db.Text
  refreshToken          String? //@db.Text
  idToken               String? //@db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String? //@db.Text
  password              String? //@db.Text
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("leancup_account")
}

model Verification {
  id         String   @id
  identifier String //@db.Text
  value      String //@db.Text
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("leancup_verification")
}

// Lean Coffee domain models

model LeanSession {
  id                String          @id @default(cuid())
  name              String
  shortId           String          @unique // Format: "evx-asdp-hzo"
  createdAt         DateTime        @default(now())
  lastInteractionAt DateTime        @default(now())
  users             SessionUser[]
  tickets           Ticket[]
  votingSessions    VotingSession[]

  @@index([shortId])
  @@map("lean_session")
}

model SessionUser {
  id                String             @id @default(cuid())
  username          String
  sessionId         String
  session           LeanSession        @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  lastSeen          DateTime           @default(now())
  createdAt         DateTime           @default(now())
  tickets           Ticket[]
  votes             Vote[]
  voterStatus       VoterStatus[]
  continuationVotes ContinuationVote[]

  @@unique([sessionId, username]) // Unique username per session
  @@index([sessionId])
  @@map("session_user")
}

model Ticket {
  id                 String              @id @default(cuid())
  description        String              @db.Text
  space              String // "PERSONAL" | "TODO" | "DOING" | "ARCHIVE"
  voteCount          Int                 @default(0) // Total votes received (sum of all vote counts)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  sessionId          String
  session            LeanSession         @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  userId             String
  user               SessionUser         @relation(fields: [userId], references: [id], onDelete: Cascade)
  votes              Vote[]
  // Timer tracking
  timerStartedAt     DateTime? // When timer started for current DOING session
  timerPausedAt      DateTime? // When timer was paused (null if running)
  totalDiscussionMs  Int                 @default(0) // Total discussion time in milliseconds
  // Archive metadata
  archivedBy         String? // Username who moved ticket to ARCHIVE
  archivedAt         DateTime? // When ticket was archived
  discussionSessions DiscussionSession[]
  continuationVotes  ContinuationVote[]

  @@index([sessionId, space])
  @@index([userId])
  @@map("ticket")
}

// Voting system models

model VotingSession {
  id            String        @id @default(cuid())
  sessionId     String
  session       LeanSession   @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  isActive      Boolean       @default(true)
  startedAt     DateTime      @default(now())
  endedAt       DateTime?
  forceClosedBy String? // Username who force-closed the vote
  voterStatuses VoterStatus[]

  @@index([sessionId])
  @@map("voting_session")
}

model VoterStatus {
  id              String        @id @default(cuid())
  votingSessionId String
  votingSession   VotingSession @relation(fields: [votingSessionId], references: [id], onDelete: Cascade)
  userId          String
  user            SessionUser   @relation(fields: [userId], references: [id], onDelete: Cascade)
  isDone          Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([votingSessionId, userId])
  @@index([votingSessionId])
  @@map("voter_status")
}

model Vote {
  id              String      @id @default(cuid())
  votingSessionId String
  ticketId        String
  ticket          Ticket      @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  userId          String
  user            SessionUser @relation(fields: [userId], references: [id], onDelete: Cascade)
  voteCount       Int // Number of votes (1, 2, 3, etc.)
  pointsCost      Int // Points spent (1, 4, 9, 16, etc.)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@unique([votingSessionId, ticketId, userId]) // One vote per user per ticket per session
  @@index([votingSessionId])
  @@index([ticketId])
  @@index([userId])
  @@map("vote")
}

// Discussion timer and continuation voting models

model DiscussionSession {
  id         String    @id @default(cuid())
  ticketId   String
  ticket     Ticket    @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  startedAt  DateTime  @default(now())
  endedAt    DateTime?
  durationMs Int       @default(0) // Duration in milliseconds
  isActive   Boolean   @default(true)

  @@index([ticketId])
  @@map("discussion_session")
}

model ContinuationVote {
  id        String      @id @default(cuid())
  ticketId  String
  ticket    Ticket      @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  userId    String
  user      SessionUser @relation(fields: [userId], references: [id], onDelete: Cascade)
  vote      String // "continue" | "archive"
  createdAt DateTime    @default(now())

  @@unique([ticketId, userId])
  @@index([ticketId])
  @@map("continuation_vote")
}
